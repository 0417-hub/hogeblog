<%= form_with model: article, local: true do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <%= message %>
    <% end %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>